<UserControl x:Class="Support.Wpf.UserControl_ImageViwer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cvt="clr-namespace:Support.Wpf"
             mc:Ignorable="d" x:Name="UserControl_Viewer"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <cvt:ConverterRatio x:Key="Converter_Half" Numerator="1" Denominator="2"/>
        <cvt:ConverterCrossVisibility x:Key="Converter_CrossMode"/>
    </UserControl.Resources>
    <Canvas Width="{Binding ElementName=UserControl_Viewer, Path=ActualWidth}"
            Height="{Binding ElementName=UserControl_Viewer, Path=ActualHeight}">
        <Line x:Name="Line_HorizontalCenter" 
              Stroke="{Binding CrosshairsColor}" StrokeThickness="5"
              Visibility="Visible"
              X1="0" 
              X2="{Binding ElementName=UserControl_Viewer, Path=ActualWidth}"
              Y1="{Binding ElementName=UserControl_Viewer, Path=ActualHeight, Converter= {StaticResource Converter_Half}}" 
              Y2="{Binding ElementName=UserControl_Viewer, Path=ActualHeight, Converter= {StaticResource Converter_Half}}" />
        <Line x:Name="Line_VerticalCenter"
              Stroke="{Binding CrosshairsColor}" StrokeThickness="{Binding CrossThickness}"
              Visibility="{Binding CrossMode,Converter={StaticResource Converter_CrossMode}}"
              X1="{Binding ElementName=UserControl_Viewer, Path=ActualWidth, Converter= {StaticResource Converter_Half}}"
              X2="{Binding ElementName=UserControl_Viewer, Path=ActualWidth, Converter= {StaticResource Converter_Half}}"
              Y1="0" 
              Y2="{Binding ElementName=UserControl_Viewer, Path=ActualHeight}"/>
        <Rectangle x:Name="Rectangle"/>
    </Canvas>
</UserControl>
