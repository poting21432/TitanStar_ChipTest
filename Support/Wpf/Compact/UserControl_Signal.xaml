<UserControl x:Class="WpfApp_LaserWelder.UserControls.UserControl_Signal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_LaserWelder.UserControls"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <TextBlock Style="{StaticResource StyleTextBlock}" FontSize="17" Width="47"  Text="{Binding Title}"/>
        <Rectangle Width="25" Height="25" Stroke="{StaticResource SCB_ControlText}"
                   StrokeThickness="2">
            <Rectangle.Style>
                <Style TargetType="Rectangle">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Signal}" Value="1">
                            <Setter Property="Fill" Value="Red"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Signal}" Value="0">
                            <Setter Property="Fill" Value="Transparent"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
        </Rectangle>
    </StackPanel>
</UserControl>
