<UserControl x:Class="Support.Wpf.Compact.HintTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Support.Wpf.Compact"
             mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <TextBox Text="{Binding Data}" Width="{Binding RelativeSource={RelativeSource AncestorType=UserControl},Path=ActualWidth}" 
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Hint}" Width="{Binding RelativeSource={RelativeSource AncestorType=UserControl},Path=ActualWidth}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
    </Grid>
</UserControl>
