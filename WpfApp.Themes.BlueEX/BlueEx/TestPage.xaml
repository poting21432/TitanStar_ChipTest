<Page x:Class="WpfApp_Styles.BlueEX.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:styles="clr-namespace:WpfApp_Styles.BlueEX" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" >
    
    <Grid VerticalAlignment="Top" Background="{StaticResource SCB_UtilBackground}">
       
        <StackPanel HorizontalAlignment="Center" >
            <!-- SCB Utils-->
            <StackPanel>
                <TextBlock Margin="0 5" Foreground="{StaticResource SCB_UtilForeground}">
                This is Regular Text For Outsider User Interface
                </TextBlock>
                <TextBlock Margin="0 0 0 5" Foreground="{StaticResource SCB_UtilHighLight}">
                This is HighLight Text For Outsider User Interface
                </TextBlock>
            </StackPanel>
            <!-- SCB Infos-->
            <ListBox Background="{StaticResource SCB_InfoBackground}">

                <TextBlock  Foreground="{StaticResource SCB_InfoBold}" FontWeight="Bold">
                    This is Bold Text For Insider User Interface
                </TextBlock>

                <TextBlock  Foreground="{StaticResource SCB_InfoUnderLine}" TextDecorations="Underline">
                    This is Underline Text For Insider User Interface
                </TextBlock>
                
                <TextBlock Foreground="{StaticResource SCB_InfoRegular}">
                    This is Regular Text For Insider User Interface <LineBreak/>
                    foo, abcde fghijk lmnop qrstu vwxyz 0123456789
                </TextBlock>

            </ListBox>
            
            <!-- SCB Chart-->
            <Canvas Height="200" Background="{StaticResource SCB_ChartBackground_Light}">
                
                <Rectangle
                    x:Name="Rect_LU"
                    Width="50"
                    Height="50"
                    Fill="{StaticResource SCB_ChartBackground_VeryDark}"
                    Margin="10 10 0 0"
                    Stroke= "{StaticResource SCB_ChartRulerLine}"
                    StrokeThickness="2"
                    />
                <Rectangle
                    Width="50"
                    Height="50"
                    Fill="{StaticResource SCB_ChartBackground_Dark}"
                    Canvas.Left= "60"
                    Margin="-2 10 0 0"
                    Stroke= "{StaticResource SCB_ChartRulerLine}"
                    StrokeThickness="2"
                    />
                <Rectangle
                    Width="50"
                    Height="50"
                    Canvas.Top ="60"
                    Margin="10 -2 0 0"
                    Fill="{StaticResource SCB_ChartBackground_Medium}"
                    Stroke= "{StaticResource SCB_ChartRulerLine}"
                    StrokeThickness="2"
                    />
                <Rectangle
                    Width="50"
                    Height="50"
                    Canvas.Left= "60" Canvas.Top ="60"
                    Margin="-2 -2 0 0"
                    Fill="{StaticResource SCB_ChartBackground_Light}"
                    Stroke= "{StaticResource SCB_ChartRulerLine}"
                    StrokeThickness="2"
                    />
                <Path 
                    Stroke="{StaticResource SCB_ChartValue}" StrokeThickness="2" 
                    Data="M 12,12 C 10,30 100,40 106,108" />
                <TextBlock FontWeight="Bold" Foreground="{StaticResource SCB_ChartRulerNum}">N</TextBlock>

                <TextBlock Margin="0 20 0 0" FontWeight="Bold" Foreground="{StaticResource SCB_ChartRulerNum}">P</TextBlock>
                <TextBlock Margin="0 40 0 0" FontWeight="Bold" Foreground="{StaticResource SCB_ChartRulerNum}">Q</TextBlock>
                <TextBlock Margin="0 60 0 0" FontWeight="Bold" Foreground="{StaticResource SCB_ChartRulerNum}">R</TextBlock>
                <TextBlock Margin="0 80 0 0" FontWeight="Bold" Foreground="{StaticResource SCB_ChartRulerNum}">S</TextBlock>
                <TextBlock Margin="0 100 0 0" FontWeight="Bold" Foreground="{StaticResource SCB_ChartRulerNum}">T</TextBlock>
            </Canvas>

            <Grid Height="200" 
                  Background="{StaticResource SCB_UtilBackground}">
                <StackPanel>
                    <GroupBox Header="GroupBox" Style="{StaticResource StyleGroupBox}">
                        <StackPanel>
                            <Button Margin="0 5" FontSize="20" Foreground="#FFA0BCDA" 
                            Style="{StaticResource StyleButton}"/>
                            <ComboBox Margin="0 5" FontSize="20">This is Example ComboBox</ComboBox>
                            <TextBox Margin="0 5" Style="{StaticResource StyleTextBox}"
                                 FontSize="18" Width="289" Padding="3 3">Sample Text</TextBox>
                            <Button Margin="0 5" FontSize="20" Foreground="#FFA0BCDA" 
                            Style="{StaticResource StyleColorButton}">
                                asdfzxcvzxcv
                            </Button>

                        </StackPanel>
                    </GroupBox>
                </StackPanel>
                
            </Grid>
        </StackPanel>
    </Grid>
</Page>
